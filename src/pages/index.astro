---
import Layout from '../layouts/Layout.astro';
import Window from '../components/Window.astro';

const projects = [
  {
    title: "Project 1",
    description: "desc",
    link: "https://github.com/stiantha/project1",
    technologies: ["TypeScript", "React", "Node.js"]
  },
  {
    title: "Project 2",
    description: "desc",
    link: "https://github.com/stiantha/project2",
    technologies: ["Python", "Django", "PostgreSQL"]
  },
];

const gaps = 8;
const windows = [
  { 
    id: 'profile', 
    left: gaps, 
    top: gaps, 
    width: `calc(50% - ${gaps * 1.5}px)`, 
    height: `calc(50% - ${gaps * 1.5}px)`,
    zIndex: 1
  },
  { 
    id: 'about', 
    left: `calc(50% + ${gaps/2}px)`, 
    top: gaps, 
    width: `calc(50% - ${gaps * 1.5}px)`, 
    height: `calc(50% - ${gaps * 1.5}px)`,
    zIndex: 1
  },
  { 
    id: 'projects', 
    left: gaps, 
    top: `calc(50% + ${gaps/2}px)`, 
    width: `calc(50% - ${gaps * 1.5}px)`, 
    height: `calc(50% - ${gaps * 1.5}px)`,
    zIndex: 1
  },
  { 
    id: 'contact', 
    left: `calc(50% + ${gaps/2}px)`, 
    top: `calc(50% + ${gaps/2}px)`, 
    width: `calc(50% - ${gaps * 1.5}px)`, 
    height: `calc(50% - ${gaps * 1.5}px)`,
    zIndex: 1
  }
];
---

<Layout title="HYPRFOLIO">
  <div class="relative w-full h-full">
    <Window title="profile" style={`left: ${windows[0].left}; top: ${windows[0].top}; width: ${windows[0].width}; height: ${windows[0].height}; z-index: ${windows[0].zIndex};`}>
      <div class="text-[#a9b1d6] text-sm leading-relaxed">
        <div class="text-[#7aa2f7]">$ cat me.txt</div>
        <div class="mt-2">Stian</div>
        <div class="text-[#565f89]">dev</div>
      </div>
    </Window>

    <Window title="about.txt" style={`left: ${windows[1].left}; top: ${windows[1].top}; width: ${windows[1].width}; height: ${windows[1].height}; z-index: ${windows[1].zIndex};`}>
      <div class="text-[#a9b1d6] text-sm leading-relaxed">
        <div class="text-[#7aa2f7]">$ cat about.txt</div>
        <div class="mt-2 text-[#565f89] whitespace-pre-wrap">sugarbloat</div>
      </div>
    </Window>

    <Window title="projects/" style={`left: ${windows[2].left}; top: ${windows[2].top}; width: ${windows[2].width}; height: ${windows[2].height}; z-index: ${windows[2].zIndex};`}>
      <div class="text-[#a9b1d6] text-sm leading-relaxed">
        <div class="text-[#7aa2f7]">$ ls projects/</div>
        
        <div class="mt-2">
          <div class="text-[#7aa2f7]">Project 1</div>
          <div class="text-[#565f89]">desc</div>
          <div class="text-[#414868]">TypeScript React Node.js</div>
          <a href="#" class="text-[#7aa2f7] hover:underline">View on GitHub →</a>
        </div>

        <div class="mt-4">
          <div class="text-[#7aa2f7]">Project 2</div>
          <div class="text-[#565f89]">desc</div>
          <div class="text-[#414868]">Python Django PostgreSQL</div>
          <a href="#" class="text-[#7aa2f7] hover:underline">View on GitHub →</a>
        </div>
      </div>
    </Window>

    <Window title="contact" style={`left: ${windows[3].left}; top: ${windows[3].top}; width: ${windows[3].width}; height: ${windows[3].height}; z-index: ${windows[3].zIndex};`}>
      <div class="text-[#a9b1d6] text-sm leading-relaxed">
        <div class="flex gap-4">
          <a href="#" class="text-[#7aa2f7] hover:underline">GitHub →</a>
          <a href="#" class="text-[#7aa2f7] hover:underline">LinkedIn →</a>
          <a href="#" class="text-[#7aa2f7] hover:underline">Email →</a>
        </div>
      </div>
    </Window>
  </div>
</Layout> 