<script>
  function updateClock() {
    const clockSpan = document.querySelector('#clock span:last-child');
    if (clockSpan) {
      const now = new Date();
      clockSpan.textContent = now.toLocaleTimeString('en-US', { 
        hour12: false,
        hour: '2-digit',
        minute: '2-digit'
      });
    }
  }
  setInterval(updateClock, 1000);
  updateClock();
</script> 